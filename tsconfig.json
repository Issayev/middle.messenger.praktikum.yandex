{
  "include": [
    "src/**/*.ts",
    "src/pages/chats/components/side-menu/buttons",
    "src/pages/chats/components/chat-section/header-section/functional-button"
  ],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "target": "ES2015",
    "rootDir": "./src",
    "baseUrl": "./src",
    "types": ["node"],
    "typeRoots": ["src/typings"],
    "esModuleInterop": true,
    "moduleResolution": "node",

    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true
  }
}
